#! /bin/bash
#=========================================================================
# Copyright (c) 2015 GemTalk Systems, LLC <dhenrich@gemtalksystems.com>.
#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] [-f] [-v Pharo3.0 | Pharo4.0 ]

Create a gs_server client. Used for standard GsDevKit tasks that do not require
tODE to be installed.

If the gs_server client image already exists, the installation is skipped
unless the -f option is specified.

OPTIONS
  -h 
     display help
  -d <full-path-to-directory>
     <full-path-to-directory> specifies the directory into which the chosen
     pharo version is downloaded
  -f
     Force gs_server client installation, whether or not the image
     already exists.
  -v Pharo3.0 | Pharo4.0
     Choose the version of Pharo to use for the client. Default is Pharo3.0.

EXAMPLES
  $(basename $0) -h
  $(basename $0) -p _0 todeDev
  $(basename $0) -f todeDev
  $(basename $0) -v Pharo3.0 todeDev
  $(basename $0)

HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"
  exit 1
fi
source ${GS_HOME}/bin/defGsDevKit.env

force=""
version="Pharo3.0"
while getopts ":fhv:" OPT ; do
  case "$OPT" in
    h) usage; exit 0;;
    f) force="true";;
    v) version="${OPTARG}";;
    *) usage; exit 1;;
  esac
done
shift $(($OPTIND - 1))

directoryPath=$GS_GS_SERVER

if [ ! -d "$directoryPath" ] ; then
  mkdir $directoryPath
  cp -r $GS_TODE_CLIENT/template/* $directoryPath/
  $GS_HOME/bin/private/downloadSmalltalkClient -v $version -d $directoryPath
fi

message="create"
if [ -e $directoryPath/todeClient${postFix}.image ] ; then
  if [ "${force}x" = "x" ] ; then
    echo "todeClient image already created, use -f to force update"
    exit 0
  else
    message="update"
  fi
fi

todeLoadPath=$GS_SHARED_TODE/sys/default/pharo/todeLoad.st
if [ -e $GS_SHARED_TODE/sys/local/pharo/todeLoad.st ] ; then
  todeLoadPath=$GS_SHARED_TODE/sys/local/pharo/todeLoad.st
fi

echo "${message} todeClient${postFix} image using $todeLoadPath"

if [ "${force}" = "true" ] ; then
  $directoryPath/pharo $directoryPath/todeClient${postFix}.image save todeClientTmp
else
  $directoryPath/pharo $directoryPath/Pharo.image save todeClientTmp
fi

$directoryPath/pharo $directoryPath/todeClientTmp.image st --quit --save $todeLoadPath

$directoryPath/pharo $directoryPath/todeClientTmp.image save todeClient${postFix}
rm -f $directoryPath/todeClientTmp.*

echo
echo "...finished $(basename $0)"
